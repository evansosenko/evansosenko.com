{
  "name": "Hugo",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VARIANT": "16",
      "HUGO_VERSION": "0.103.0",
      "HUGO_ARCH": "64bit"
    }
  },
  "extensions": [
    "ms-vsliveshare.vsliveshare",
    "EditorConfig.EditorConfig",
    "stylelint.vscode-stylelint",
    "standard.vscode-standard",
    "esbenp.prettier-vscode"
  ],
  "forwardPorts": [1313],
  "portsAttributes": {
    "1313": { "label": "App" }
  },
  "postCreateCommand": "npm install",
  "remoteUser": "node"
}
